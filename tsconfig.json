{
  "compilerOptions": {
    /* выход */
    "outDir": "dist",
    "rootDir": "src",

    /* модуль/таргет */
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",

    /* удобство */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}

